
# Text Generation using TOPSIS
import numpy as np
import pandas as pd
import matplotlib.pyplot as plt

df = pd.read_csv("data/decision_matrix.csv", index_col=0)

weights = np.array([0.20,0.20,0.15,0.10,0.10,0.25])
criteria = ["min","max","max","min","min","max"]

norm_df = df / np.sqrt((df**2).sum())
weighted_df = norm_df * weights

ideal_best = []
ideal_worst = []

for i, col in enumerate(weighted_df.columns):
    if criteria[i] == "max":
        ideal_best.append(weighted_df[col].max())
        ideal_worst.append(weighted_df[col].min())
    else:
        ideal_best.append(weighted_df[col].min())
        ideal_worst.append(weighted_df[col].max())

ideal_best = np.array(ideal_best)
ideal_worst = np.array(ideal_worst)

dist_best = np.sqrt(((weighted_df - ideal_best)**2).sum(axis=1))
dist_worst = np.sqrt(((weighted_df - ideal_worst)**2).sum(axis=1))

scores = dist_worst / (dist_best + dist_worst)

results = pd.DataFrame({"TOPSIS Score": scores}).sort_values("TOPSIS Score", ascending=False)
print(results)

plt.figure()
plt.bar(results.index, results["TOPSIS Score"])
plt.title("TOPSIS Scores")
plt.show()
